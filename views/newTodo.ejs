<%- include("partials/header") %>
<link rel="stylesheet" href="/css/style.css">

<div class="container">
    <div class="card">
        <div class="header">
            <a href="/" class="btn back-btn">‚Üê Back</a>
            <h2>Add New Todo</h2>
        </div>
        
        <form action="/add-todo" method="post" class="todo-form">
            <div class="form-group">
                <label for="title">Title</label>
                <input 
                    type="text"
                    name="title"
                    placeholder="Enter title (5-30 characters)"
                    required
                    minlength="5"
                    maxlength="30"
                >
            </div>
        </br>
            
            <div class="form-group">
                <label for="desc">Description</label>
                <textarea 
                    name="desc"
                    placeholder="Enter description"
                    rows="4"
                    required
                ></textarea>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn submit-btn">Add Todo</button>
            </div>
        </form>
    </div>
</div>

